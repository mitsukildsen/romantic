<div class="container">
	<div class="row">
		<h2 class="plan-headline">マイページ編集</h2>

		<%= form_for(@user) do |f| %>

		<!-- エラーメッセージ表示-->
		<% if @user.errors.any? %>
			<h3><%= @user.errors.count %>error occurrence</h3><!--エラーメッセ-->
			<ul>
				<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		<% end %>
		<!-- エラーメッセージ表示-->

	    <div class="col-xs-5">
			<div class="field">
				<%= attachment_image_tag(@user, :profile_image, fallback: "pic02.jpg", class: "profile-img") %>
				<%= f.label :プロフィール画像 %>
				<%= f.attachment_field :profile_image, class: "user_image" %>
			</div>
		</div>
	    <div class="col-xs-7">
	    	<div class="field">
				<%= f.label :名前 %>
				<%= f.text_field :name, autofocus: true, autocomplete: "name", class: "sign-up-input", placeholder: "What's your username?" %>
		    </div>
			<div class="field">
				<%= f.label :自己紹介 %>
				<%= f.text_area :introduction, class: "sign-up-input introduction", placeholder: "自己紹介を記入しよう！" %>
			</div>
	    </div>

		<div class="actions">
			<%= f.submit "更新する", class: "registration-button" %>
		</div>
		<% end %>
		<div class="actions col-xs-3 col-xs-offset-10">
		<%= link_to "戻る", user_path(@user), class: "back-btn fas fa-arrow-circle-left" %>
	    </div>
	</div>
</div>